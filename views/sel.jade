extends homelayoutblock head_  script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js')  script(src='/socket.io/socket.io.js')  script(src='/sel.js')block content  #ga    p Pick a game (DLCs may not work)    p      input(type='text',name='game',value='',placeholder='Enter a game',id='game')    .list.left.nom#auto  #gr    p Pick a group    .list.left.nom      p        input(type='radio',name='group',value='?',id='g1',checked=(selected==gr||(selected=='friends'&&id==null)))        input(type='text',name='group2',value=gr,placeholder='Group Name',id='g2')      if id        p          input(type='radio',name='group',value='Your friends',id='friends',checked=(selected=='friends'),data-url='friends/'+id)          label(for='friends') Your friends      each group in groups        p          input(type='radio',name='group',value=group.name,id='g_'+group.url,checked=(selected==group.url),data-url=group.url)          label(for='g_'+group.url)= group.name  div    p      a(href='#',id='sel') Check >